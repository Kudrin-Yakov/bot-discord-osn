import discord
from discord.ext import commands

bot = commands.Bot(command_prefix='-', intents=discord.Intents.all())

@bot.event
async def on_ready():
    print(f'We have logged in as {bot.user}')

@bot.command('кода')
async def hello(ctx): 
    await ctx.send(f' Привет! Для более удобного использования сайта, ты можешь использовать теги: безопасность, размер, жара, холод, развитие, чистота.')

@bot.command('Привет')
async def hello(ctx):
    await ctx.send(f'Привет! Я бот, который может отправить рейтинг лучших стран в определённых категориях!')
    
@bot.command('безопасность')
async def haha(ctx):
  await ctx.send('Топ 10 стран по уровню безопасности:
1. Ислания
2. Новая Зеландия
3. Ирландия
4. Дания
5. Австрия
6. Португалия
7. Словения
8. Чешская Республика
9. Сингапур
10. Япония')
  
@bot.command('размер')
async def haha(ctx):
  await ctx.send('Топ 10 стран по размеру:
1. Россия
